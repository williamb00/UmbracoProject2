@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = "mainLayout.cshtml";
    
    // Define default image URL
    var defaultImageUrl = "default-image-url";

    // Retrieve images with fallbacks to default if not available
    var aboutMainImage = Model?.Value<IPublishedContent>("aboutMainImage")?.Url() ?? defaultImageUrl;
    var reviewImage1 = Model?.Value<IPublishedContent>("reviewImage1")?.Url() ?? defaultImageUrl;
    var teamImages = new[]
    {
        Model?.Value<IPublishedContent>("teamImage1")?.Url() ?? defaultImageUrl,
        Model?.Value<IPublishedContent>("teamImage2")?.Url() ?? defaultImageUrl,
        Model?.Value<IPublishedContent>("teamImage3")?.Url() ?? defaultImageUrl,
        Model?.Value<IPublishedContent>("teamImage4")?.Url() ?? defaultImageUrl,
        Model?.Value<IPublishedContent>("teamImage5")?.Url() ?? defaultImageUrl,
        Model?.Value<IPublishedContent>("teamImage6")?.Url() ?? defaultImageUrl,
        Model?.Value<IPublishedContent>("teamImage7")?.Url() ?? defaultImageUrl
    };
}

<!--baner-->
<section class="page-top bg-gray">
    <h1>About Us</h1>
    <div class="breadcrumbs">
        <a href="/">Home</a>
        <i class="fa-solid fa-chevron-right"></i>
        <a class="active" href="#">About</a>
    </div>
</section>

<!----ceo section --->
