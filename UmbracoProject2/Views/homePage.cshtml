@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = "mainLayout.cshtml";

    // Set the page title from the model, if available
    ViewBag.Title = Model?.Value("pageTitle") ?? null;

    // Fetching image URLs from the model, with default fallback URLs if not set
    var backgroundImage = Model?.Value<IPublishedContent>("heroBackgroundImage")?.Url() ?? "";
    var signatureImage = Model?.Value<IPublishedContent>("aboutSignatureImage")?.Url() ?? "";
    var trustedBackgroundImage = Model?.Value<IPublishedContent>("trustedBackgroundImage")?.Url() ?? "default-signature-url";
    var succesStoryBackground = Model?.Value<IPublishedContent>("succesStoryBackground")?.Url() ?? "default-signature-url";

    var ourProjectImage1 = Model?.Value<IPublishedContent>("ourProjectImage1")?.Url() ?? "default-signature-url";
    var ourProjectImage2 = Model?.Value<IPublishedContent>("ourProjectImage2")?.Url() ?? "default-signature-url";
    var ourProjectImage3 = Model?.Value<IPublishedContent>("ourProjectImage3")?.Url() ?? "default-signature-url";
    var ourProjectImage4 = Model?.Value<IPublishedContent>("ourProjectImage4")?.Url() ?? "default-signature-url";
}

<!-- Hero Section -->
<section class="hero bg-gray">
    <div class="container">
        <div class="img-container">
            <!-- Hero background image -->
            <img src="@backgroundImage" alt="Tina Fox, CEO & Founder">
        </div>
        <div class="hero-content">
            <h1 class="headline">@Model?.Value("heroHeadline")</h1>
            <p class="ingress">@Model?.Value("heroText")</p>
            <div class="btn-container">
                <a class="btn btn-primary" href="/contactsPage/">@Model?.Value("heroButtonText")</a>
            </div>
        </div>
    </div>
</section>

<!-- About Us Section -->
<section class="about-us">
    <div class="container">
        <div class="about-us-content">
            <h6>@Model?.Value("aboutSectionTitle")</h6>
            <h2>@Model?.Value("aboutHeadline")</h2>
            <p class="about-us-quote">@Model?.Value("aboutQuote")</p>
            <p class="about-us-text">@Model?.Value("aboutText")</p>
            <img src="@signatureImage" alt="@Model?.Value("aboutSignature")">
            <p class="ceo-founder">@Model?.Value("aboutSignature")</p>
        </div>
        <div class="call-back">
            <div class="call-back-header bg-primary">
                <h3>Request a call back</h3>
            </div>
            <div class="call-back-content">
                <p>
                    Dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur excepteur sint occaecat
                </p>
                <form method="get" novalidate>
                    <input type="text" id="name" name="name" placeholder="Name">
                    <input type="email" id="email" name="email" placeholder="Email address">
                    <input type="text" id="phone" name="phone" placeholder="Phone">
                    <select name="service" id="service">
                        <option value="1">Financial consulting</option>
                    </select>
                    <button class="btn btn-secondary" type="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>

<!-- Include Services Partial -->
@await Html.PartialAsync("components/services")

<!-- Our Story Section -->
<section class="our-story">
    <div class="container">
        <div class="our-story-content">
            <h2>@Model?.Value("trustedSectionHeadline") <span>@Model?.Value("trustedSectionHeadline2")</span></h2>
            <p>@Model.Value("trustedButtonText")</p>
            <a class="btn btn-primary" href="/projects">@Model.Value("trustedButtonUrl")</a>
        </div>
        <div class="our-story-img">
            <img src="@trustedBackgroundImage" alt="People">
        </div>
    </div>
</section>

<!-- Success Story Section -->
<section class="success-stories bg-primary">
    <div class="container">
        <div class="success-stories-content">
            <h6>@Model.Value("successStoryHeadline")</h6>
            <h2>@Model.Value("successStoryTitle")</h2>
            <div class="grid">
                <div class="grid-container">
                    <p><span>689</span>More than 100 customers have been served</p>
                </div>
                <div class="grid-container">
                    <p><span>370</span>More than 370 projects have been completed</p>
                </div>
                <div class="grid-container">
                    <p><span>125</span>More than 125 branches have been established in Europe and America</p>
                </div>
            </div>
        </div>
        <div class="success-stories-img">
            <img src="@succesStoryBackground" alt="People at table">
        </div>
    </div>
</section>

<!-- Our Projects Section -->
<section class="our-projects">
    <div class="container">
        <h6>OUR PROJECTS</h6>
        <h2>Recent projects</h2>
    </div>
    <div class="grid">
        <a class="grid-container" href="/annualreport/">
            <img src="@ourProjectImage1" alt="Annual report">
            <div class="project-content bg-primary">
                <h6>Annual Report for Juva Inc.</h6>
                <p>Financial services</p>
                <i class="fa-solid fa-chevron-right"></i>
            </div>
        </a>
        <a class="grid-container" href="/annualreport/">
            <img src="@ourProjectImage2" alt="Annual report">
            <div class="project-content bg-primary">
                <h6>Business Insights for SP Group Inc.</h6>
                <p>Financial services</p>
                <i class="fa-solid fa-chevron-right"></i>
            </div>
        </a>
        <a class="grid-container" href="/annualreport/">
            <img src="@ourProjectImage3" alt="Annual report">
            <div class="project-content bg-primary">
                <h6>Financial Advisors to Irra Corp Inc.</h6>
                <p>Financial services</p>
                <i class="fa-solid fa-chevron-right"></i>
            </div>
        </a>
        <a class="grid-container" href="/annualreport/">
            <img src="@ourProjectImage4" alt="Annual report">
            <div class="project-content bg-primary">
                <h6>Budget Planning for Buccura Inc.</h6>
                <p>Financial services</p>
                <i class="fa-solid fa-chevron-right"></i>
            </div>
        </a>
    </div>
</section>

<!-- Include Partners Partial -->
@await Html.PartialAsync("components/partners")
